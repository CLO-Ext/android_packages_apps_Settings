<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    android:key="battery_share_screen"
    android:title="@string/battery_share_title"
    settings:keywords="@string/keywords_battery_share">

    <com.android.settingslib.widget.TopIntroPreference
        android:key="battery_share_intro"
        android:title="@string/battery_share_summary" />

    <com.android.settingslib.widget.IllustrationPreference
        android:key="battery_share_video"
        settings:lottie_rawRes="@raw/lottie_reverse_charging" />

    <com.android.settingslib.widget.MainSwitchPreference
        android:key="battery_share"
        android:title="@string/battery_share_title"
        settings:controller="com.android.settings.fuelgauge.BatterySharePreferenceController" />

    <com.android.settings.neoteric.PowerShareSeekbarPreference
        android:key="battery_share_limit"
        android:title="@string/battery_share_limit_title" />
</PreferenceScreen>
