<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:key="swipe_to_screenshot_screen"
    android:title="@string/three_finger_gesture">

    <com.android.settingslib.widget.IllustrationPreference
        android:key="swipe_to_screenshot_video" 
        settings:searchable="true"
        app:lottie_rawRes="@raw/lottie_gesture_swipe_to_screenshot" />

    <SwitchPreferenceCompat
        android:key="swipe_to_screenshot"
        android:title="@string/three_finger_gesture"
        android:summary="@string/three_finger_gesture_summary"
        app:keywords="@string/keywords_gesture"
        app:controller="com.android.settings.gestures.SwipeToScreenshotPreferenceController" />

    <org.neoteric.preference.SystemSettingListPreference
        android:key="swipe_type"
        android:title="@string/three_finger_title"
        android:summary="%s"
        android:entries="@array/three_finger_entries"
        android:entryValues="@array/three_finger_values"
        android:dependency="swipe_to_screenshot"
        android:defaultValue="0" />

    <org.neoteric.preference.SystemSettingSwitchPreference
        android:key="ambient_screen_screenshot_swipe"
        android:title="@string/three_finger_ambient_title"
        android:summary="@string/three_finger_ambient_summary"
        android:dependency="swipe_to_screenshot"
        android:defaultValue="true" />
</PreferenceScreen>
